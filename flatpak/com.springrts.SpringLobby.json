{
	"app-id": "com.springrts.SpringLobby",
	"command": "springlobby",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "18.08",
	"sdk": "org.freedesktop.Sdk",
	"modules": [
		{
			"name": "alure",
			"buildsystem": "cmake-ninja",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/kcat/alure.git"
				}
			]
		},
		{
			"name": "wxWidgets",
			"config-opts": "--with-gtk=3 --with-opengl --with-libjpeg --disable-shared --enable-monolithic--with-libtiff --with-libpng --with-zlib --disable-sdltest --enable-unicode --enable-display --enable-propgrid --disable-webkit --disable-webview --disable-webviewwebkit --with-libiconv=/usr",
			"cxxflags": [
				"-std=c++11"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.3/wxWidgets-3.1.3.tar.bz2",
					"sha256": "fffc1d34dac54ff7008df327907984b156c50cff5a2f36ee3da6052744ab554a"
				}
			],
			"cleanup": [ "/bin/wx*", "/lib/wx" ]
		},
		{
			"name": "springlobby",
		   	"buildsystem": "cmake-ninja",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/springlobby/springlobby.git"
				}
			]
		}
	]

}
